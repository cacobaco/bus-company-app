<!DOCTYPE html>
<html>
    <head>
        <%- include("./partials/headContent.ejs") %>
        <link rel="stylesheet" href="./css/home.css" />
        <title>Horários da UMa</title>
    </head>
    <body>
        <%- include("./partials/topbar.ejs") %>
        <div class="h-100 d-flex flex-column justify-content-center">
            <div
                class="container d-flex flex-column align-items-center justify-content-center"
            >
                <div class="box2 pb-2 border-bottom border-black d-flex align-items-center rounded-top justify-content-center pt-3">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="logo mb-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />
                    </svg>
                        <h3 class="mx-1">Histórico de Pagamentos</h3>
                
                </div>
                <div class="box2 d-flex flex-column overflow-scroll prego-historico-pagamentos"> 
                    <!-- Aqui ficam os historicos de pagamentos -->
                    <% if (!payments.length) { %>
                        <div class="d-flex justify-content-center align-items-center box2 border-bottom border-black flex-wrap box4">
                            <h6 class="mx-1 mt-1">Não efetuou pagamentos.</h3> 
                        </div>
                    <% } else { %>
                        <% payments.forEach((payment) => { %>
                            <div class="d-flex justify-content-between align-items-center box2 border-bottom border-black flex-wrap box4 prego-pagamento">
                                <h6 class="mx-1 mt-1">Carregamento do passe - <%= payment.price %>€</h3> 
                                <h6 class="mx-1"><%= payment.createdAt.toISOString().slice(0, 10) %></h3> 
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
            
                    
        </div>
        <%- include("./partials/navbar.ejs") %>
    </body>
</html>
