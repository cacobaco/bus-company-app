<!DOCTYPE html>
<html>
    <head>
        <%- include("./partials/headContent.ejs") %>
        <link rel="stylesheet" href="./css/home.css" />
        <title>Horários da UMa</title>
    </head>
    <body>
        <%- include("./partials/topbar.ejs") %>
        <div class="h-100 d-flex flex-column justify-content-center">
            <div
                class="container d-flex flex-column align-items-center justify-content-center"
            >
                <div
                    class="box2 pb-2 d-flex align-items-center rounded justify-content-center pt-3"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="logo mb-2"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 010 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 010-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375z"
                        />
                    </svg>
                    <h3 class="mx-1">Gerir Passe</h3>
                </div>
                <div class="d-flex w-100">
                    <button
                        class="btn d-flex justify-content-center align-items-center box2 me-1 mt-2 rounded border-bottom border-black flex-wrap box4"
                        id="modal-button2"
                        data-bs-toggle="modal"
                        data-bs-target="#modalWindow2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="logo"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 010 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 010-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375z"
                            />
                        </svg>

                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="logo"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12 6v12m6-6H6"
                            />
                        </svg>
                    </button>

                    <button
                        class="btn border-none d-flex justify-content-center align-items-center mt-2 rounded box2 border-bottom border-black flex-wrap box4"
                        id="modal-button3"
                        data-bs-toggle="modal"
                        data-bs-target="#modalWindow3"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="logo"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 010 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 010-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375z"
                            />
                        </svg>

                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="logo"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M18 12H6"
                            />
                        </svg>
                    </button>
                </div>
            </div>
            <div id="modalWindow2" class="modal fade">
                <!-- Modal de adicionar passe-->
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <form action="/passe" method="post">
                            <div class="modal-header modalHeader">
                                <div class="box2 d-flex justify-content-center">
                                    <h5 class="modal-title">Adicionar Passe</h5>
                                </div>
                                <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                ></button>
                            </div>
                            <div
                                class="modal-body modalBody d-flex flex-column justify-content-center"
                            >
                                <div
                                    class="d-flex flex-column justify-content-center"
                                >
                                    <div
                                        class="d-flex flex-column align-items-center justify-content-center"
                                    >
                                        <label
                                            for="numeroPasse"
                                            class="form-label"
                                            >Número do passe:</label
                                        ><br />
                                        <input
                                            class="w-100 form-control"
                                            type="text"
                                            id="numeroPasse"
                                            name="numeroPasse"
                                        /><br />
                                        <label
                                            for="precoPasse"
                                            class="form-label"
                                            >Preço do passe:</label
                                        ><br />
                                        <input
                                            class="w-100 form-control"
                                            type="number"
                                            id="precoPasse"
                                            name="precoPasse"
                                        /><br />
                                        <label
                                            for="expiracaoPasse"
                                            class="form-label"
                                            >Expiração do passe:</label
                                        ><br />
                                        <input
                                            class="w-100 form-control"
                                            type="date"
                                            id="expiracaoPasse"
                                            name="expiracaoPasse"
                                        /><br />
                                        <label
                                            for="nomeUtilizador"
                                            class="form-label"
                                            >Nome do Utilizador:</label
                                        ><br />
                                        <select
                                            id="nomeUtilizador"
                                            class="form-select"
                                            name="nomeUtilizador"
                                        >
                                            <% users.forEach((user) => { %>
                                            <option value="<%= user._id %>">
                                                <%= user.name %>
                                            </option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div
                                class="modal-footer modalBody d-flex justify-content-center"
                            >
                                <button
                                    type="submit"
                                    class="btn btn-success"
                                    data-bs-dismiss="modal"
                                >
                                    Adicionar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div id="modalWindow3" class="modal fade">
                <!-- Modal de remover passe -->
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <form action="/removerPasse" method="post">
                            <div class="modal-header modalHeader">
                                <div class="box2 d-flex justify-content-center">
                                    <h5 class="modal-title">Remover Passe</h5>
                                </div>
                                <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                ></button>
                            </div>
                            <div
                                class="modal-body modalBody d-flex flex-column justify-content-center"
                            >
                                <div
                                    class="d-flex flex-column justify-content-center"
                                >
                                    <div
                                        class="d-flex flex-column align-items-center justify-content-center"
                                    >
                                        <label
                                            for="numeroPasse"
                                            class="form-label"
                                            >Utilizador:</label
                                        ><br />
                                        <select
                                            id="numeroPasse"
                                            class="form-select"
                                            name="numeroPasse"
                                        >
                                            <% comPasse.forEach((user) => { %>
                                            <option value="<%= user._id %>">
                                                <%= user.name %>
                                            </option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="modalBody modal-footer d-flex justify-content-center"
                            >
                                <button
                                    type="submit"
                                    class="btn btn-danger"
                                    data-bs-dismiss="modal"
                                >
                                    Remover
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%- include("./partials/navbar.ejs") %>
    </body>
</html>
